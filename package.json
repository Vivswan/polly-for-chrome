{
  "name": "polly-for-chrome",
  "version": "1.0.8",
  "description": "A wrapper for Amazon Polly that transforms highlighted text into high-quality natural sounding audio.",
  "main": "index.js",
  "type": "module",
  "packageManager": "bun@1.2.10",
  "scripts": {
    "build": "bun scripts/validate-translations.cjs && bun scripts/bun.config.js",
    "dev": "bun scripts/bun.config.js --watch",
    "lint": "bunx eslint .",
    "typecheck": "bunx tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:coverage:ui": "vitest --coverage --ui",
    "generate-icons": "bun scripts/generate-icons.js",
    "bump-version": "bun scripts/bump-version.js",
    "validate-translations": "bun scripts/validate-translations.cjs",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,cjs}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "author": "Vivswan Shah",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.27.4",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/js": "^9.39.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/chrome": "^0.0.326",
    "@types/he": "^1.2.3",
    "@types/node": "^25.1.0",
    "@types/react": "^19.1.7",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "archiver": "^7.0.1",
    "babel-plugin-react-compiler": "^19.1.0-rc.2",
    "bun": "^1.2.10",
    "crx": "^5.0.1",
    "esbuild-plugin-babel": "^0.2.3",
    "eslint": "^9.28.0",
    "happy-dom": "^20.4.0",
    "husky": "^9.1.7",
    "js-yaml": "^4.1.0",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.4",
    "prettier": "^3.8.1",
    "sharp": "^0.34.1",
    "tailwindcss": "~3.2.7",
    "typescript": "^5.2.2",
    "vitest": "^4.0.18",
    "yaml-loader": "^0.8.1"
  },
  "dependencies": {
    "@aws-sdk/client-polly": "^3.0.0",
    "@tailwindcss/postcss": "^4.1.8",
    "@types/sanitize-html": "^2.16.0",
    "dotenv": "^16.5.0",
    "esbuild": "^0.25.5",
    "fuse.js": "^7.1.0",
    "he": "^1.2.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-feather": "^2.0.10",
    "react-router-dom": "^7.6.2",
    "sanitize-html": "^2.17.0",
    "tailwind-merge": "^3.3.0",
    "wink-eng-lite-web-model": "^1.8.1",
    "wink-nlp": "^2.3.2"
  }
}
